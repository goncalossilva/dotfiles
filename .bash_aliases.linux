# Open files/folders.
alias open='xdg-open'

# Open code.
alias code='/var/lib/flatpak/exports/bin/com.visualstudio.code.oss'

# Open steam in a new X server (better performance, alt+tab, etc).
alias steam='xinit /var/lib/flatpak/exports/bin/com.valvesoftware.Steam -- :1 vt$XDG_VTNR'

# Update the whole system.
alias up='sudo dnf update --refresh && sudo dnf autoremove && flatpak update && flatpak remove --unused'

